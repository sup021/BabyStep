<!doctype html>

<html>

<head>
	<title>Habit Page</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/navbar.css" rel="stylesheet">
	<link href="/css/habit.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://kit.fontawesome.com/610d507d86.js" crossorigin="anonymous"></script>
</head>

<script>
	window.onload = function () {
		var url = document.location.href,
			params = url.split('?'),
			data = {}, tmp;
		for (var i = 1, l = params.length; i < l; i++) {
			tmp = params[i].split('=');
			data[tmp[0]] = tmp[1];
		}

		if (localStorage.getItem(data.profile) == "true") {
			document.getElementById("friend_profile").innerHTML = "<img src='../css/image/" + data.profile + ".png' width='60' height='60' /><a style='color: white;font-size:80%'>&nbsp;&nbsp;" + data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s profile&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a><span style='color: green'>Friends</span>";
		} else {
			document.getElementById("friend_profile").innerHTML = "<img src='../css/image/" + data.profile + ".png' width='60' height='60' /><a style='color: white;font-size:80%'>&nbsp;&nbsp;" + data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s profile&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a><span style='color: red'>Not Friends</span>";
		}

		document.getElementById("habitName").textContent = data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s habit";
		document.getElementById("babystep").textContent = data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s Baby Step for this Habit";

	}
</script>

<body>
	<header>
		<nav class="navbar navbar-fixed-top navbar-inverse">
			<button class="btn navbar-toggle navbar-right" type="button"
				onclick="location.href='http://a7-babystep.herokuapp.com/friends'">
				<span style="color: white">
					<i class="fas fa-times"></i>
				</span>
			</button>
			<div class="container-fluid top" id='friend_profile'>
			</div>
		</nav>
	</header>

	<div class="container">
		<div class="habitbox" id="habit">
			<div class="thumbnail">
				<h2 class="habitName" id="habitName"></h2>

				{{!-- <button onclick="location.href='http://localhost:3000/habitDetails'" type="button"
					class="btn threedots">
					<i class="fas fa-ellipsis-v"></i>
				</button> --}}

				<hr class="divider">
				<p class="babystep" id="babystep"></p>
				<div class="days">
					<input type="checkbox" class="cb" id="1" name="Monday" value="Monday">
					<label for="1">Mon</label>
					<input type="checkbox" class="cb" id="3" name="Wednesday" value="Wednesday">
					<label for="3">Wed</label>
					<input type="checkbox" class="cb" id="5" name="Friday" value="Friday">
					<label for="5">Fri</label>
				</div>
				<p class="reminder">11:00</p>
			</div>
		</div>
	</div>
</body>

</html>