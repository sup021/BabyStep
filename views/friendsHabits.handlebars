</head>

<script>
	window.onload = function () {
    var url = document.location.href,
        params = url.split('?'),
        data = {}, tmp;
    for (var i = 1, l = params.length; i < l; i++) {
         tmp = params[i].split('=');
         data[tmp[0]] = tmp[1];
    }

    if (data.isfriend == "yes") {
		document.getElementById("friend_profile").innerHTML = "<img src='../css/image/" + data.profile + ".png' width='60' height='60' /><a style='color: white;font-size:80%'>&nbsp;&nbsp;" + data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s profile&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a><span style='color: green'>Friends</span>";
	} else {
		document.getElementById("friend_profile").innerHTML = "<img src='../css/image/" + data.profile + ".png' width='60' height='60' /><a style='color: white;font-size:80%'>&nbsp;&nbsp;" + data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s profile&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a><span style='color: red'>Not Friends</span>";
	}

	document.getElementById("habitName").textContent = data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s habit";
	document.getElementById("babystep").textContent = data.name.split('%20')[0] + " " + data.name.split('%20')[1] + "'s Baby Step for this Habit";

}
</script>

